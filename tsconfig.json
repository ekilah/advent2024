{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "~/*": ["src/*"],
    },
    "noUncheckedIndexedAccess": true,
  },
  "include": ["src/**/*.ts"],
}
